set main-view = id date author commit-title:graph=yes,refs=yes
bind main <Ctrl-r> !bash -c "git rebase -i %(commit)~1"
bind diff <Ctrl-c> @bash -c "echo -n %(commit) | pbcopy"
bind log <Ctrl-c> @bash -c "echo -n %(commit) | pbcopy"
bind main <Ctrl-c> @bash -c "echo -n %(commit) | pbcopy"
bind diff <Ctrl-y> @bash -c "git log --pretty=oneline --format=%s %(commit) | head -n 1 | pbcopy"
bind log <Ctrl-y> @bash -c "git log --pretty=oneline --format=%s %(commit) | head -n 1 | pbcopy"
bind main <Ctrl-y> @bash -c "git log --pretty=oneline --format=%s %(commit) | head -n 1 | pbcopy"
bind main <Ctrl-o> @bash -c "git checkout %(commit)"
bind refs <Ctrl-o> @bash -c "git checkout %(commit)"
bind blame <Ctrl-b> @bash -c "hub browse -- commit/%(commit)"
bind diff <Ctrl-b> @bash -c "hub browse -- commit/%(commit)"
bind log <Ctrl-b> @bash -c "hub browse -- commit/%(commit)"
bind main <Ctrl-b> @bash -c "hub browse -- commit/%(commit)"
